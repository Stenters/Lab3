<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="650.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="enterss.Dot2DotController">
    <MenuBar prefHeight="50" VBox.vgrow="NEVER">
        <Menu id="fileMenu" mnemonicParsing="false" text="File">
            <MenuItem id="openMenuItem" mnemonicParsing="false" onAction="#handleOpen" text="Openâ€¦" />
         <MenuItem id="saveMenuItem" mnemonicParsing="false" onAction="#handleSave" text="Save" />
             <MenuItem id="closeMenuItem" mnemonicParsing="false" onAction="#handleClose" text="Close" />
        </Menu>
        <Menu fx:id="editMenu" disable="true" mnemonicParsing="false" text="Draw">
              <MenuItem id="linesMenuItem" mnemonicParsing="false" onAction="#handleLines" text="LInes Only" />
              <MenuItem id="dotsMenuItem" mnemonicParsing="false" onAction="#handleDots" text="Dots Only" />
        </Menu>
    </MenuBar>
    <AnchorPane VBox.vgrow="ALWAYS">
        <Canvas fx:id="canvas" height="1280.0" pickOnBounds="true" width="600.0" />
      <HBox disable="true" fx:id="nodeHBox" prefHeight="25.0" prefWidth="300.0" AnchorPane.leftAnchor="0.0">
         <children>
            <Label prefHeight="25.0" prefWidth="150.0" text="Number of Nodes to Show: " />
            <TextArea fx:id="nodeText" minHeight="-Infinity" onKeyPressed="#checkEnter" prefHeight="8.0" prefWidth="50.0" />
            <Button mnemonicParsing="false" onAction="#handleReload" text="Reload">
               <HBox.margin>
                  <Insets left="45.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <Label fx:id="nodeCounter" prefHeight="25.0" text="Nodes: 0" AnchorPane.rightAnchor="0.0" />
    </AnchorPane>
</VBox>
